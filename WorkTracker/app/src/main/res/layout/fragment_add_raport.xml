<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AddRaportFragment"
             android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="30dip">

    <TextView
            android:id="@+id/textViewComapny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/enterCompany"
            android:gravity="center"/>
    <EditText
            android:id="@+id/entryCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/textViewComapny"
            android:gravity="center"/>
    <TextView
            android:id="@+id/textViewStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/pickStartDate"
            android:layout_below="@+id/entryCompany"
            android:gravity="center"/>
    <TextView
            android:id="@+id/textViewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/pickEndDate"
            android:layout_below="@+id/textViewStart"
            android:gravity="center"/>

    <Button
            android:id="@+id/addRaportBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addRaport"
            android:textSize="20sp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="100dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="30dp" android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:background="@color/design_default_color_primary_dark"
            android:textColor="@color/cardview_light_background"/>

</RelativeLayout>